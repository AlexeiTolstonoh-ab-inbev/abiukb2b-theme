    "children": ["link#imageLink3"]

  },
  "link#imageLink3": {
    "props": {
      "blockClass": "image-link",
      "label": "Chose Corona",
      "href": "/corona"
    }
  },

  "flex-layout.row#image4-layout":{
    "children": ["image#collage-image4"]
  },
  "flex-layout.row#image4-text": {
    "children": ["link#imageLink4"]

  },
  "link#imageLink4": {
    "props": {
      "blockClass": "image-link",
      "label": "Chose Stella",
      "href": "/stella"
    }
  },
  "image#collage-image1": {
    "props": {
      "title":"First image",
      "min-height": "200",
      "min-width": "400",
      "blockClass": "collage-image",
      "link": "/bud",
      "src": "https://storecomponents.vteximg.com.br/arquivos/banner.jpg"
    }
  },
  "image#collage-image2": {
