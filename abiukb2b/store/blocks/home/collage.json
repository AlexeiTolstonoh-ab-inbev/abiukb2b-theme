{
  "flex-layout.row#collage-rowText": {
  "props": {
    "blockClass": "collage-rowTextWrapper",
    "horizontalAlign": "center"
  },
    "children": ["flex-layout.col#collage-collumText"]
  },
  "flex-layout.col#collage-collumText": {
    "props": {
    "blockClass": "collage-collumText"
  },
    "children": ["rich-text#brandTitle"]
  },
  "rich-text#brandTitle": {
    "props": {
      "text": "Explore Our Brands",
      "blockClass": "brandTitle"
    }
  },

  "rich-text#brandText": {
    "props": {
      "text": "From global giants Budweiser, Bud Light, Corona and Stella Artois, to international heroes Beck's, Leffe and Hoegaarden, and local champions Bass and Boddingtons. We're proud to brew so many of the world's leading premium beers and ciders.",
      "blockClass": "brandText"
    }
  },


  "flex-layout.row#collage-row1": {
    "props": {
      "blockClass": "collage-rowImagesBlock",
      "horizontalAlign": "center"
    },
    "children": [
      "stack-layout#first-image", "stack-layout#second-image",
      "stack-layout#third-image",  "stack-layout#fourth-image"
    ]
  },
  "stack-layout#first-image": {
    "children": ["flex-layout.row#image1-layout"]
      },
  "stack-layout#second-image": {
    "children": ["flex-layout.row#image2-layout"]
  },
  "stack-layout#third-image": {
    "children": ["flex-layout.row#image3-layout"]
  },
  "stack-layout#fourth-image": {
    "children": ["flex-layout.row#image4-layout"]
  },


  "flex-layout.row#image1-layout":{
    "children": ["image#collage-image1"]
  },
  "flex-layout.row#image1-text": {
    "children": ["link#imageLink1"]

},
  "link#imageLink1": {
    "props": {
      "blockClass": "image-link",
      "label": "Chose Bud",
      "href": "/bud"
    }
  },


  "flex-layout.row#image2-layout":{
    "children": ["image#collage-image3"]
  },
  "flex-layout.row#image2-text": {
    "children": ["link#imageLink2"]

  },
  "link#imageLink2": {
    "props": {
      "blockClass": "image-link",
      "label": "Chose Bud Light",
      "href": "/budlight"
    }
  },

  "flex-layout.row#image3-layout":{
    "children": ["image#collage-image3"]
  },
